<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context=".ChooseProgramActivity">

    <TextView
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/choose_program"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        style="@style/topic_textView"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:background="@drawable/program_stage"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">


        <GridLayout
            android:layout_gravity="center"
            android:padding="16dp"
            android:rowCount="4"
            android:columnCount="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <!-- Row One -->

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="101dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="right"
                android:layout_marginBottom="32dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/fastProgram_card"
                    android:layout_width="125dp"
                    android:layout_height="96dp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/purple_700"
                    android:visibility="invisible"/>

                    <androidx.cardview.widget.CardView
                        android:layout_centerInParent="true"
                        android:layout_width="119dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2">

                                <ImageView
                                    android:id="@+id/fast_infoButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/info_button"/>

                            </RelativeLayout>


                            <TextView
                                android:id="@+id/fastProgram_TV"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:text="@string/fast_program"
                                style="@style/topic_textView"
                                android:padding="5dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_gravity="left"
                android:layout_marginRight="5dp"
                android:layout_width="130dp"
                android:layout_height="101dp"
                android:layout_marginBottom="32dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ecoProgram_card"
                    android:layout_width="125dp"
                    android:layout_height="96dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    android:layout_centerInParent="true"
                    app:cardBackgroundColor="@color/purple_700"
                    android:visibility="invisible"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="119dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="4dp"
                        android:layout_centerInParent="true">

                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2">

                                <ImageView
                                    android:id="@+id/eco_infoButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/info_button"/>

                            </RelativeLayout>


                            <TextView
                                android:id="@+id/ecoProgram_TV"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:text="@string/eco_program"
                                style="@style/topic_textView"
                                android:padding="5dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <!-- Row Two -->

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="101dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="right"
                android:layout_marginBottom="32dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cottonProgram_card"
                    android:layout_width="125dp"
                    android:layout_height="96dp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/purple_700"
                    android:visibility="invisible"/>

                <androidx.cardview.widget.CardView
                    android:layout_centerInParent="true"
                    android:layout_width="119dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2">

                                <ImageView
                                    android:id="@+id/cotton_infoButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/info_button"/>

                            </RelativeLayout>


                            <TextView
                                android:id="@+id/cottonProgram_TV"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:text="@string/cotton_program"
                                style="@style/topic_textView"
                                android:padding="5dp"
                                />

                        </LinearLayout>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_gravity="left"
                android:layout_marginRight="5dp"
                android:layout_width="130dp"
                android:layout_height="101dp"
                android:layout_marginBottom="32dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/syntheticProgram_card"
                    android:layout_width="125dp"
                    android:layout_height="96dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    android:layout_centerInParent="true"
                    app:cardBackgroundColor="@color/purple_700"
                    android:visibility="invisible"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="119dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="4dp"
                    android:layout_centerInParent="true">

                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2">

                                <ImageView
                                    android:id="@+id/synthetic_infoButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/info_button"/>

                            </RelativeLayout>


                            <TextView
                                android:id="@+id/syntheticProgram_TV"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:text="@string/synthetic_program"
                                style="@style/topic_textView"
                                android:padding="5dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

        </RelativeLayout>

            <!-- Row Three -->

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="101dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="right"
                android:layout_marginBottom="32dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/vulProgram_card"
                    android:layout_width="125dp"
                    android:layout_height="96dp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/purple_700"
                    android:visibility="invisible"/>

                <androidx.cardview.widget.CardView
                    android:layout_centerInParent="true"
                    android:layout_width="119dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2">

                                <ImageView
                                    android:id="@+id/vul_infoButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/info_button"/>

                            </RelativeLayout>


                            <TextView
                                android:id="@+id/vulProgram_TV"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:text="@string/vul_program"
                                style="@style/topic_textView"
                                android:padding="5dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_gravity="left"
                android:layout_marginRight="5dp"
                android:layout_width="130dp"
                android:layout_height="101dp"
                android:layout_marginBottom="32dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/mallinaProgram_card"
                    android:layout_width="125dp"
                    android:layout_height="96dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    android:layout_centerInParent="true"
                    app:cardBackgroundColor="@color/purple_700"
                    android:visibility="invisible"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="119dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="4dp"
                    android:layout_centerInParent="true">

                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2">

                                <ImageView
                                    android:id="@+id/mallina_infoButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/info_button"/>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/mallinaProgram_TV"
                                style="@style/topic_textView"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:text="@string/mallina_program"
                                android:padding="5dp"/>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <!-- Row Four -->

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="101dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="right"
                android:layout_marginBottom="32dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/whiteProgram_card"
                    android:layout_width="125dp"
                    android:layout_height="96dp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/purple_700"
                    android:visibility="invisible"/>

                <androidx.cardview.widget.CardView
                    android:layout_centerInParent="true"
                    android:layout_width="119dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2">

                                <ImageView
                                    android:id="@+id/white_infoButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/info_button"/>

                            </RelativeLayout>


                            <TextView
                                android:id="@+id/whiteProgram_TV"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:text="@string/white_program"
                                style="@style/topic_textView"
                                android:padding="5dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

            </RelativeLayout>


        </GridLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05">

        <Button
            android:id="@+id/continue_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/Continue"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>